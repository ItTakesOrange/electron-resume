{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES5",
    "allowJs": true,
    "jsx": "react",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["./src/*"]
    }
  }
}
